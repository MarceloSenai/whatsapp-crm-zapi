@page "/dashboard"
@inject HttpClient Http
@inject IJSRuntime JS
@implements IDisposable
@using System.Text.Json
@using WhatsAppCrm.Web.Helpers

<div class="flex flex-col h-[calc(100vh)] overflow-y-auto">
    <header class="flex items-center gap-3 px-6 py-4 border-b border-gray-200 bg-white shrink-0">
        <div class="w-10 h-10 rounded-lg bg-whatsapp/10 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#25d366" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>
        </div>
        <div>
            <h1 class="text-xl font-bold text-gray-900">Performance</h1>
            <p class="text-sm text-gray-500">Marketing ROI e funil de vendas</p>
        </div>
    </header>

    <div class="flex-1 p-6 space-y-6 overflow-y-auto">
        @if (loading && data == null)
        {
            <div class="flex items-center justify-center h-64">
                <div class="animate-spin w-8 h-8 border-2 border-whatsapp border-t-transparent rounded-full"></div>
            </div>
        }
        else if (data != null)
        {
            @* Filters *@
            <div class="bg-white rounded-xl border p-4 shadow-sm">
                <div class="flex items-center gap-3 mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400"><polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/></svg>
                    <span class="text-sm font-medium text-gray-700">Filtros</span>
                </div>
                <div class="flex flex-wrap gap-3">
                    <input type="date" @bind="dateFrom" @bind:event="onchange" @bind:after="LoadData"
                           class="text-sm border border-gray-200 rounded-lg px-3 py-1.5 focus:outline-none focus:ring-2 focus:ring-whatsapp/30" />
                    <span class="text-sm text-gray-400 self-center">ate</span>
                    <input type="date" @bind="dateTo" @bind:event="onchange" @bind:after="LoadData"
                           class="text-sm border border-gray-200 rounded-lg px-3 py-1.5 focus:outline-none focus:ring-2 focus:ring-whatsapp/30" />
                    <select @bind="selectedCampaignId" @bind:after="LoadData"
                            class="text-sm border border-gray-200 rounded-lg px-3 py-1.5 focus:outline-none focus:ring-2 focus:ring-whatsapp/30">
                        <option value="">Todas as campanhas</option>
                        @foreach (var c in campaigns)
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </select>
                    <select @bind="selectedSource" @bind:after="LoadData"
                            class="text-sm border border-gray-200 rounded-lg px-3 py-1.5 focus:outline-none focus:ring-2 focus:ring-whatsapp/30">
                        <option value="">Todas as fontes</option>
                        @foreach (var s in sources)
                        {
                            <option value="@s">@SourceLabel(s)</option>
                        }
                    </select>
                </div>
            </div>

            @* KPI Cards *@
            <div class="relative">
                @if (loading)
                {
                    <div class="absolute inset-0 z-10 flex items-center justify-center rounded-xl bg-white/60">
                        <div class="animate-spin w-6 h-6 border-2 border-whatsapp border-t-transparent rounded-full"></div>
                    </div>
                }
                <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
                    @* Total Gasto *@
                    <div class="bg-white rounded-xl border p-4 shadow-sm">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="text-red-500 text-xs font-bold">$</span>
                            <span class="text-xs text-gray-500">Total Gasto</span>
                        </div>
                        <div class="text-lg font-bold text-gray-900 truncate">@Formatters.FormatCurrency(data.Kpi.TotalSpend)</div>
                    </div>
                    @* Leads *@
                    <div class="bg-white rounded-xl border p-4 shadow-sm">
                        <div class="flex items-center gap-2 mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-500"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg>
                            <span class="text-xs text-gray-500">Leads</span>
                        </div>
                        <div class="text-lg font-bold text-gray-900 truncate">@data.Kpi.TotalLeads</div>
                    </div>
                    @* CPL *@
                    <div class="bg-white rounded-xl border p-4 shadow-sm">
                        <div class="flex items-center gap-2 mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-500"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>
                            <span class="text-xs text-gray-500">CPL</span>
                        </div>
                        <div class="text-lg font-bold text-gray-900 truncate">@Formatters.FormatCurrency(data.Kpi.Cpl)</div>
                    </div>
                    @* Conversoes *@
                    <div class="bg-white rounded-xl border p-4 shadow-sm">
                        <div class="flex items-center gap-2 mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-emerald-500"><polyline points="22 7 13.5 15.5 8.5 10.5 2 17"/><polyline points="16 7 22 7 22 13"/></svg>
                            <span class="text-xs text-gray-500">Conversoes</span>
                        </div>
                        <div class="text-lg font-bold text-gray-900 truncate">@data.Kpi.Conversions</div>
                    </div>
                </div>
                <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
                    @* Receita *@
                    <div class="bg-white rounded-xl border p-4 shadow-sm">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="text-emerald-500 text-xs font-bold">$</span>
                            <span class="text-xs text-gray-500">Receita</span>
                        </div>
                        <div class="text-lg font-bold text-gray-900 truncate">@Formatters.FormatCurrency(data.Kpi.Revenue)</div>
                    </div>
                    @* ROAS *@
                    <div class="bg-white rounded-xl border p-4 shadow-sm">
                        <div class="flex items-center gap-2 mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-violet-500"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>
                            <span class="text-xs text-gray-500">ROAS</span>
                        </div>
                        <div class="text-lg font-bold text-gray-900 truncate">@($"{data.Kpi.Roas:F1}x")</div>
                    </div>
                    @* ROI *@
                    <div class="bg-white rounded-xl border p-4 shadow-sm">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="text-amber-500 text-xs font-bold">%</span>
                            <span class="text-xs text-gray-500">ROI</span>
                        </div>
                        <div class="text-lg font-bold text-gray-900 truncate">@Formatters.FormatPercent(data.Kpi.Roi)</div>
                    </div>
                </div>
            </div>

            @* Funnel *@
            <div class="bg-white rounded-xl border p-6 shadow-sm">
                <h3 class="text-sm font-semibold text-gray-900 mb-4">Funil de Vendas</h3>
                @if (data.Funnel.Count > 0)
                {
                    var maxCount = data.Funnel.Max(f => f.Count);
                    @foreach (var stage in data.Funnel)
                    {
                        var widthPercent = maxCount > 0 ? (int)(stage.Count * 100.0 / maxCount) : 0;
                        <div class="mb-3">
                            <div class="flex justify-between text-xs text-gray-600 mb-1">
                                <span>@stage.Stage</span>
                                <span>@stage.Count &middot; @Formatters.FormatCurrency(stage.Value)</span>
                            </div>
                            <div class="w-full bg-gray-100 rounded-full h-6 overflow-hidden">
                                <div class="h-full bg-whatsapp/70 rounded-full flex items-center px-2 transition-all"
                                     style="width: @(Math.Max(widthPercent, 5))%">
                                    <span class="text-[10px] text-white font-medium">@stage.Count</span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            @* Charts Row *@
            <div class="grid gap-6 lg:grid-cols-2">
                <div class="bg-white rounded-xl border p-6 shadow-sm">
                    <h3 class="text-sm font-semibold text-gray-900 mb-4">Leads ao Longo do Tempo</h3>
                    <div style="height: 250px;">
                        <canvas id="leadsChart"></canvas>
                    </div>
                </div>
                <div class="bg-white rounded-xl border p-6 shadow-sm">
                    <h3 class="text-sm font-semibold text-gray-900 mb-4">Gasto vs Receita</h3>
                    <div style="height: 250px;">
                        <canvas id="spendRevenueChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="grid gap-6 lg:grid-cols-2">
                @* Pie Chart *@
                <div class="bg-white rounded-xl border p-6 shadow-sm">
                    <h3 class="text-sm font-semibold text-gray-900 mb-4">Distribuicao por Fonte</h3>
                    <div style="height: 280px;">
                        <canvas id="sourceChart"></canvas>
                    </div>
                </div>

                @* Campaign Table *@
                <div class="bg-white rounded-xl border p-6 shadow-sm overflow-hidden">
                    <h3 class="text-sm font-semibold text-gray-900 mb-4">Ranking de Campanhas</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                            <thead>
                                <tr class="border-b text-xs text-gray-500">
                                    <th class="text-left py-2 pr-2">Campanha</th>
                                    <th class="text-right py-2 px-2">Gasto</th>
                                    <th class="text-right py-2 px-2">Leads</th>
                                    <th class="text-right py-2 px-2">Conv.</th>
                                    <th class="text-right py-2 px-2">Receita</th>
                                    <th class="text-right py-2 pl-2">ROAS</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in data.CampaignRanking)
                                {
                                    <tr class="border-b border-gray-50 hover:bg-gray-50">
                                        <td class="py-2 pr-2">
                                            <div class="font-medium text-gray-900 truncate max-w-[150px]">@c.Name</div>
                                            <span class="@($"text-[10px] px-1.5 py-0.5 rounded-full {PlatformColor(c.Platform)}")">@PlatformLabel(c.Platform)</span>
                                        </td>
                                        <td class="text-right py-2 px-2 text-gray-600">@Formatters.FormatCurrency(c.Spend)</td>
                                        <td class="text-right py-2 px-2 text-gray-600">@c.Leads</td>
                                        <td class="text-right py-2 px-2 text-gray-600">@c.Conversions</td>
                                        <td class="text-right py-2 px-2 font-medium text-gray-900">@Formatters.FormatCurrency(c.Revenue)</td>
                                        <td class="text-right py-2 pl-2 font-medium text-whatsapp">@($"{c.Roas:F1}x")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private DashboardData? data;
    private List<CampaignOption> campaigns = [];
    private List<string> sources = [];
    private bool loading = true;
    private DateTime dateFrom = DateTime.UtcNow.AddDays(-30);
    private DateTime dateTo = DateTime.UtcNow;
    private string selectedCampaignId = "";
    private string selectedSource = "";
    private bool _chartsRendered;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var campaignList = await Http.GetFromJsonAsync<JsonElement>("/api/campaigns");
            foreach (var c in campaignList.EnumerateArray())
            {
                campaigns.Add(new CampaignOption
                {
                    Id = c.GetProperty("id").GetString()!,
                    Name = c.GetProperty("name").GetString()!
                });
            }
        }
        catch { }

        await LoadData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (data != null && !_chartsRendered)
        {
            _chartsRendered = true;
            await RenderCharts();
        }
    }

    private async Task LoadData()
    {
        loading = true;
        _chartsRendered = false;
        try
        {
            var fromStr = dateFrom.ToString("yyyy-MM-dd");
            var toStr = dateTo.ToString("yyyy-MM-dd");
            var qs = $"from={fromStr}&to={toStr}";
            if (!string.IsNullOrEmpty(selectedCampaignId)) qs += $"&campaignId={selectedCampaignId}";
            if (!string.IsNullOrEmpty(selectedSource)) qs += $"&source={selectedSource}";

            var json = await Http.GetFromJsonAsync<JsonElement>($"/api/dashboard?{qs}");
            data = ParseDashboard(json);

            sources = data.SourceDistribution.Select(s => s.Source).ToList();
        }
        catch { }
        finally
        {
            loading = false;
            StateHasChanged();
            await Task.Yield();
            if (data != null)
            {
                _chartsRendered = true;
                try { await RenderCharts(); } catch { }
            }
        }
    }

    private async Task RenderCharts()
    {
        if (data == null) return;

        var leadsLabels = data.LeadsOverTime.Select(l => FormatDateLabel(l.Date)).ToArray();
        var leadsData = data.LeadsOverTime.Select(l => l.Count).ToArray();
        await JS.InvokeVoidAsync("renderAreaChart", "leadsChart", leadsLabels, leadsData);

        var srLabels = data.SpendVsRevenue.Select(s => FormatDateLabel(s.Date)).ToArray();
        var spendData = data.SpendVsRevenue.Select(s => s.Spend).ToArray();
        var revenueData = data.SpendVsRevenue.Select(s => s.Revenue).ToArray();
        await JS.InvokeVoidAsync("renderBarChart", "spendRevenueChart", srLabels, spendData, revenueData);

        var srcLabels = data.SourceDistribution.Select(s => SourceLabel(s.Source)).ToArray();
        var srcData = data.SourceDistribution.Select(s => s.Count).ToArray();
        await JS.InvokeVoidAsync("renderPieChart", "sourceChart", srcLabels, srcData, (object?)null);
    }

    private static string FormatDateLabel(string date)
    {
        if (DateTime.TryParse(date, out var d))
            return d.ToString("dd/MM");
        return date;
    }

    private static string SourceLabel(string source) => source switch
    {
        "google_ads" => "Google Ads",
        "meta_ads" => "Meta Ads",
        "linkedin_ads" => "LinkedIn",
        "linkedin" => "LinkedIn",
        "email" => "E-mail",
        "whatsapp" => "WhatsApp",
        "organic" => "Organico",
        "referral" => "Referral",
        "direto" => "Direto",
        _ => source
    };

    private static string PlatformLabel(string? platform) => platform switch
    {
        "google_ads" => "Google Ads",
        "meta_ads" => "Meta Ads",
        "linkedin_ads" => "LinkedIn",
        "linkedin" => "LinkedIn",
        "email" => "E-mail",
        "whatsapp" => "WhatsApp",
        _ => platform ?? "Outro"
    };

    private static string PlatformColor(string? platform) => platform switch
    {
        "google_ads" => "bg-blue-100 text-blue-700",
        "meta_ads" => "bg-purple-100 text-purple-700",
        "linkedin_ads" => "bg-sky-100 text-sky-700",
        "linkedin" => "bg-sky-100 text-sky-700",
        "email" => "bg-amber-100 text-amber-700",
        "whatsapp" => "bg-green-100 text-green-700",
        _ => "bg-gray-100 text-gray-700"
    };

    private static DashboardData ParseDashboard(JsonElement json)
    {
        var kpi = json.GetProperty("kpi");
        var result = new DashboardData
        {
            Kpi = new KpiData
            {
                TotalSpend = kpi.GetProperty("totalSpend").GetDouble(),
                TotalLeads = kpi.GetProperty("totalLeads").GetInt32(),
                Cpl = kpi.GetProperty("cpl").GetDouble(),
                Conversions = kpi.GetProperty("conversions").GetInt32(),
                Revenue = kpi.GetProperty("revenue").GetDouble(),
                Roas = kpi.GetProperty("roas").GetDouble(),
                Roi = kpi.GetProperty("roi").GetDouble()
            }
        };

        foreach (var f in json.GetProperty("funnel").EnumerateArray())
        {
            result.Funnel.Add(new FunnelStage
            {
                Stage = f.GetProperty("stage").GetString()!,
                Count = f.GetProperty("count").GetInt32(),
                Value = f.GetProperty("value").GetDouble()
            });
        }

        foreach (var l in json.GetProperty("leadsOverTime").EnumerateArray())
        {
            result.LeadsOverTime.Add(new TimePoint
            {
                Date = l.GetProperty("date").GetString()!,
                Count = l.GetProperty("count").GetInt32()
            });
        }

        foreach (var s in json.GetProperty("spendVsRevenue").EnumerateArray())
        {
            result.SpendVsRevenue.Add(new SpendRevenuePoint
            {
                Date = s.GetProperty("date").GetString()!,
                Spend = s.GetProperty("spend").GetDouble(),
                Revenue = s.GetProperty("revenue").GetDouble()
            });
        }

        foreach (var sd in json.GetProperty("sourceDistribution").EnumerateArray())
        {
            result.SourceDistribution.Add(new SourceDist
            {
                Source = sd.GetProperty("source").GetString()!,
                Count = sd.GetProperty("count").GetInt32()
            });
        }

        foreach (var cr in json.GetProperty("campaignRanking").EnumerateArray())
        {
            result.CampaignRanking.Add(new CampaignRank
            {
                Name = cr.GetProperty("name").GetString()!,
                Platform = cr.TryGetProperty("platform", out var p) ? p.GetString() : null,
                Spend = cr.GetProperty("spend").GetDouble(),
                Leads = cr.GetProperty("leads").GetInt32(),
                Conversions = cr.GetProperty("conversions").GetInt32(),
                Revenue = cr.GetProperty("revenue").GetDouble(),
                Roas = cr.GetProperty("roas").GetDouble()
            });
        }

        return result;
    }

    public void Dispose() { }

    // DTOs
    class DashboardData
    {
        public KpiData Kpi { get; set; } = new();
        public List<FunnelStage> Funnel { get; set; } = [];
        public List<TimePoint> LeadsOverTime { get; set; } = [];
        public List<SpendRevenuePoint> SpendVsRevenue { get; set; } = [];
        public List<SourceDist> SourceDistribution { get; set; } = [];
        public List<CampaignRank> CampaignRanking { get; set; } = [];
    }
    class KpiData { public double TotalSpend; public int TotalLeads; public double Cpl; public int Conversions; public double Revenue; public double Roas; public double Roi; }
    class FunnelStage { public string Stage = ""; public int Count; public double Value; }
    class TimePoint { public string Date = ""; public int Count; }
    class SpendRevenuePoint { public string Date = ""; public double Spend; public double Revenue; }
    class SourceDist { public string Source = ""; public int Count; }
    class CampaignRank { public string Name = ""; public string? Platform; public double Spend; public int Leads; public int Conversions; public double Revenue; public double Roas; }
    class CampaignOption { public string Id = ""; public string Name = ""; }
}
